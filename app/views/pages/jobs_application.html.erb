                        <option value="10 month tour">10 month tour</option>
                        <option value="5 month tour">5 month tour</option>
                        <option value="4 month tour">4 month tour</option>
                        <option value="Not sure">Not sure</option>
                    </select>
            </div>
        </div>
        
