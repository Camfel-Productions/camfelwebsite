<div id="banner-image-2"></div>

<div class="container">
  <h2 id="contact-us-title">Get More Information</h2>
  <p id="contact-us-paragraph">
     If you would like to receive more information about Camfel Productions or any of the assemblies, 
     please feel free to email us or call us at <strong><a href="tel:1-800-522-6335">1-800-522-6335</br></a></strong>. 
     <br />
  </p>
  <%flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-#{key}" %>
  <%end%>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="well">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control' %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
    <div class = "col-md-4 text-center">
        <p>
       15709 Arrow Hwy</br>
       Irwindale, CA, 91706</br>
       <strong>Fax: (626)960-2185</br>
       Email: info@camfel.com</br>
       <a href="tel:1-626-960-6922"> Phone: (626) 960-6922</strong> </a>
     </p>
    </div>
  </div>
</div>

<form action="https://formspree.io/jordanzeeg@gmail.com"
      method="POST">
    <input type="text" name="name">
    <input type="email" name="_replyto">
    <input type="submit" value="Send">
</form>